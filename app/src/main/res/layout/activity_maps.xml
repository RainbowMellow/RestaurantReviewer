<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="GUI.MapsActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get location distance"
                android:onClick="onClickGetDistance"/>
            <Button
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="log location"
                android:onClick="onClickGetLocation"
                android:layout_above="@+id/btnOpenLocation"/>
            <Button
                android:id="@+id/btnOpenLocation"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="open location"
                android:onClick="onClickOpenLocation"
                android:enabled="false"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
